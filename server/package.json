{
  "name": "blog-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "npx rimraf dist coverage",
    "client": "cd ../client && npm run start",
    "coverage": "npm run test && start coverage/lcov-report/index.html",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node dist/server.js",
    "start:dev": "npm run build && concurrently \"nodemon ./dist/server.js\" \"npm run client\"",
    "start-og": "npm run build && node dist/server.js",
    "prisma:deploy": "npx prisma migrate deploy",
    "prisma:init": "npx prisma migrate dev --name \"init\" --preview-feature",
    "prisma:migrate": "npx prisma migrate dev --preview-feature --name ",
    "seed": "node seeds/index.js",
    "lint": "npx eslint . --ext .ts",
    "test": "jest --coverage"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/mocha": "^8.2.3",
    "@types/node": "^15.12.4",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "concurrently": "^6.2.1",
    "eslint": "^7.30.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "prisma": "^2.25.0",
    "should": "^13.2.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@prisma/client": "^2.30.0",
    "bcryptjs": "^2.4.3",
    "codecov": "^3.8.2",
    "dotenv": "^10.0.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "slugify": "^1.6.0"
  }
}
